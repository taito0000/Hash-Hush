<h2>プロフィール編集</h2>
<%= form_with model:@user, local: true do |f| %>
  <table>
    <tr>
      <th>
        <label for="inputNickName">名前</label>
      </th>
      <td>
        <%= f.text_field :nickname, autofocus: true, id:"inputNickName", placeholder:"ニックネーム" %>
      </td>
    </tr>
    <tr>
      <th>
        <label for="inputIntroduction">自己紹介</label>
      </th>
      <td>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介", size: "30x3" %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td>
        <%= f.submit "変更を保存" %>
      </td>
    </tr>
  </table>
<% end %>