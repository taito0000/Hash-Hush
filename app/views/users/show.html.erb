<div class="profile">
  
  <div class="row">
    <div class="col-4">
      <%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_imagesan.png" %>
    </div>
  </div>
  
  <div class="col-8">
    <div class="container">
      <div class="row">
        <h3><%= @user.nickname %></h3>
      </div>
      <div class="row">
        <p><%= @user.introduction %></p>
      </div>
    </div>
  </div>
  
</div>

<% @posts.each do |post| %>
  <div class="container">
    <div class="row">
      <div class="col-2">
        <%= attachment_image_tag post.user, :profile_image, size: "30x30", format: 'jpeg', fallback: "no_imagesan.png" %>
        <%= post.user.name %>
      </div>
      <div class="col-10">
        <p>
          <% post.hashtags.each do |hashtag| %>
            <%= link_to hashtag_path(hashtag.name) do %>
              <%= hashtag.name %>
            <% end %>
          <% end %>
        </p>
      </div>
    </div>
    <div class="row">
      <%= link_to post_path(post.id) do %>
        <p><%= post.body %></p>
        <%= attachment_image_tag post, :image, size: "300x300" %></br>
      <% end %>
    </div>
    <div class="row">
      <div class="col-1">
        <% if post.favorited_by?(current_user) %>
          <p>
            <%= link_to post_favorites_path(post), method: :delete do %>
              ♥<%= post.favorites.count %>
            <% end %>
          </p>
          <% else %>
          <p>
            <%= link_to post_favorites_path(post), method: :post do %>
              ♡<%= post.favorites.count %> 
            <% end %>
          </p>
        <% end %>
      </div>
      <div class="col-11">
        <p>
          コメント<%= post.comments.count  %>件
        </p>
      </div>
    </div>
  </div>
<% end %>