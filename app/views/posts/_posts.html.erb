<div class="post-box">
  <% posts.each do |post| %>
    <section class="container post-item">
      <div class="row post-head">
        <div class="col-6 post-user">
          <%= attachment_image_tag post.user, :profile_image, size: "35x35", format: 'jpeg', fallback: "no_imagesan.png" %>
          <%= post.user.nickname %>
        </div>
        <div class="col-6 post-hashtags">
          <p>
            <% post.hashtags.each do |hashtag| %>
              <%= link_to hashtag_path(hashtag.name) do %>
                <%= hashtag.name %>
              <% end %>
            <% end %>
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= link_to post_path(post.id) do %>
            <p><%= post.body %></p>
            <%= attachment_image_tag post, :image, size: "300x300" %></br>
          <% end %>
        </div>
      </div>
      <div class="row reactions">
        <div class="col-3 favorite">
          <% if post.favorited_by?(current_user) %>
            <span>
              <%= link_to post_favorites_path(post), method: :delete do %>
                ♥<%= post.favorites.count %>
              <% end %>
            </span>
            <% else %>
            <span>
              <%= link_to post_favorites_path(post), method: :post do %>
                ♡<%= post.favorites.count %> 
              <% end %>
            </span>
          <% end %>
        </div>
        <div class="col-3 comment">
          <span>
            コメント<%= post.comments.count  %>件
          </span>
        </div>
        <div class="col-6 post-destroy-btn">
          <% if post.user == current_user %>
            <%= link_to "削除", post_path(post), method: :delete %>
          <% end %>
        </div>
      </div>
    </section>
  <% end %>
</div>